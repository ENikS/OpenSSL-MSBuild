    <Scripts Include="$(RootDir)\Configure" />
    <Scripts Include="$(RootDir)\util\*.pl" />
    <Scripts Include="$(RootDir)\util\*.pl" />
    -->
  </ItemGroup>

  <Target Name="FixConfigureScript" BeforeTargets="Configure" >

    <Exec Command="Perl -pi.bak -e &#34;s/(use strict;|\#\!\/usr\/local\/bin\/perl)/$1\n\$\/= \&#34;\\r\\n\&#34;;/g&#34; %(Scripts.FullPath)" 
          Condition="!Exists('%(Scripts.RelativeDir)%(Scripts.Filename).bak') And '%(Scripts.Identity)'!=''"  />
  </Target>

  <Target Name="DelFixConfigureScript" AfterTargets="Configure">
    <!--<Delete Files="$(ScriptRoot)\Configure" ContinueOnError="true" />-->
  </Target>

</Project>